<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="com.ponyvillelive.pvlmobile.ui.BottomDrawerFragment">

    <LinearLayout
        android:id="@+id/drawer_metadata"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingEnd="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingStart="12dp"
        android:paddingTop="12dp">

        <com.ponyvillelive.pvlmobile.ui.widget.SquareImageView
            android:id="@+id/drawer_cover_art"
            android:layout_width="?android:actionBarSize"
            android:layout_height="?android:actionBarSize"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:squareOrientation="vertical"
            tools:src="@drawable/mythozoology"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/drawer_title"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/abc_primary_text_material_light"
                tools:text="Manticore"/>

            <TextView
                android:id="@+id/drawer_artist"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/abc_primary_text_material_light"
                tools:text="H8_Seed"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>